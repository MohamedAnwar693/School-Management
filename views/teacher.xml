<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="school_teacher_form_view" model="ir.ui.view">
        <field name="name">school.teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="hire_date"/>
                            <field name="student_id"/>
                        </group>
                        <group>
                            <field name="class_id"/>
                            <field name="subject_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="school_teacher_tree_view" model="ir.ui.view">
        <field name="name">school.teacher.tree</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="hire_date"/>
                <field name="student_id"/>
                <field name="class_id"/>
                <field name="subject_id"/>
            </tree>
        </field>
    </record>

    <record id="teacher_pivot_view" model="ir.ui.view">
        <field name="name">school.teacher.pivot</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <pivot string="School" disable_linking="True" sample="1">
                <field name="name"/>
                <field name="student_id"/>
                <field name="class_id"/>
            </pivot>
        </field>
    </record>

    <record id="action_teacher" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">tree,kanban,pivot,form</field>
    </record>

    <menuitem
        id="school_teacher_menu"
        name="Teacher"
        parent="school_menu"
        action="action_teacher"
        sequence="20"/>

</odoo>